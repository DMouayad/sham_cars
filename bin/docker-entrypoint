#!/bin/bash -e

if [[ "$*" == *"rails server"* ]] || [[ "$*" == *"bin/rails server"* ]]; then
    echo "Running database setup..."
    ./bin/rails db:prepare
  if [[ "${RUN_SEEDS:-}" == "true" ]]; then
      echo "Seeding the database..."
      ./bin/rails db:seed
    fi
    echo "Completed: Running database setup"
fi

exec "${@}"
