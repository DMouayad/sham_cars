<!DOCTYPE html>
<html lang="en" data-theme="arena">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for(:title) || "Admin" %> | ArenaEV</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body class="min-h-screen bg-base-200">

  <div class="drawer lg:drawer-open">
    <input id="admin-drawer" type="checkbox" class="drawer-toggle">

    <!-- Main Content -->
    <div class="drawer-content flex flex-col">
      <!-- Top Navbar -->
     <header class="navbar bg-base-100 shadow-none sticky top-0 z-50">
    <div class="container-app flex w-full justify-end">

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-1">

      <div class="flex-none ml-auto">
      <% if Current.user %>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost">
            <% if Current.user.avatar.attached? %>
              <%= image_tag Current.user.avatar, class: "w-6 h-6 rounded-full object-cover mr-2", onclick: "event.stopPropagation();" %>
            <% end %>
            <%= link_to Current.user.username, my_profile_path, class: "hover:underline", onclick: "event.stopPropagation();" %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1" onclick="event.stopPropagation();">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            </svg>
          </div>
          <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
            <li class="py-2">
              <div class="flex justify-center">
                <%= link_to my_profile_path do %>
                  <% if Current.user.avatar.attached? %>
                    <%= image_tag Current.user.avatar, class: "w-16 h-16 rounded-full object-cover hover:opacity-80 transition-opacity" %>
                  <% else %>
                    <div class="w-16 h-16 rounded-full bg-base-300 flex items-center justify-center text-base-content font-semibold hover:opacity-80 transition-opacity">
                      <%= Current.user.username.first.upcase %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </li>
            <li class="pb-2">
              <div class="flex justify-center text-sm font-semibold">
                <%= link_to "@#{Current.user.username}", my_profile_path, class: "hover:underline" %>
              </div>
            </li>
            <li><hr class="my-2"></li>
            <li><%= link_to t("layout.header.home"), root_path %></li>
              <% if Current.user&.admin? %>
                  <li><%= link_to t("layout.header.admin"), admin_root_path %></li>
            <% end %>
            <li><%= link_to t("layout.header.settings"), settings_path %></li>
            <li><hr class="my-2"></li>
            <li>
              <%= button_to t("layout.header.log_out"), settings_session_path(Current.session), method: :delete, class: "text-error w-full text-left", data: { turbo: false } %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="flex gap-2">
          <%= link_to t("layout.header.sign_in"), sign_in_path, class: "btn btn-ghost" %>
          <%= link_to t("layout.header.sign_up"), sign_up_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <% I18n.available_locales.each do |locale| %>
<% next if I18n.locale == locale %>
<%= link_to t(".lang.#{locale}"), url_for(locale: locale), class: "btn btn-ghost" %>
<% end %>
    </nav>

    <!-- Mobile Menu -->
    <div class="dropdown dropdown-end md:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
        <li><%= link_to "Vehicles", vehicles_path %></li>
        <li><%= link_to "Brands", brands_path %></li>
        <li>
          <%= link_to comparison_path do %>
            <span>Compare</span>
            <% if comparison_count > 0 %>
              <span class="badge badge-primary badge-sm"><%= comparison_count %></span>
            <% end %>
          <% end %>
        </li>

        <% if signed_in? %>
          <div class="divider my-1"></div>
          <li><%= link_to "Account", edit_my_profile_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "Admin", admin_root_path %></li>
          <% end %>
          <div class="divider my-1"></div>
          <li><%= button_to "Sign Out", settings_session_path(Current.session), method: :delete, class: "text-left w-full" %></li>
        <% else %>
          <div class="divider my-1"></div>
          <li><%= link_to "Sign In", sign_in_path %></li>
          <li><%= link_to "Sign Up", sign_up_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

      <!-- Page Content -->
      <div class="p-4 lg:p-2">
        <% if flash[:notice] %>
          <div role="alert" class="alert alert-success mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span><%= flash[:notice] %></span>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div role="alert" class="alert alert-error mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span><%= flash[:alert] %></span>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="drawer-side">
      <label for="admin-drawer" aria-label="close sidebar" class="drawer-overlay"></label>

      <aside class="bg-base-100 min-h-screen w-64 p-4">
        <!-- Logo -->
        <div class="mb-6 flex items-center gap-2 px-2">
          <span class="text-2xl">âš¡</span>
          <span class="text-xl font-bold">ShamCars</span>
        </div>

        <!-- Navigation -->
        <ul class="menu gap-1">
          <li>
            <%= link_to admin_root_path, class: "#{request.path == admin_root_path ? 'active' : ''}" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Dashboard
            <% end %>
          </li>

          <li>
            <%= link_to admin_vehicles_path, class: "#{controller_name == 'vehicles' ? 'active' : ''}" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              Vehicles
            <% end %>
          </li>

          <li>
            <%= link_to admin_brands_path, class: "#{controller_name == 'brands' ? 'active' : ''}" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              Brands
            <% end %>
          </li>

          <li>
            <%= link_to admin_body_types_path, class: "#{controller_name == 'body_types' ? 'active' : ''}" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Body Types
            <% end %>
          </li>

          <li>
            <%= link_to admin_users_path, class: "#{controller_name == 'users' ? 'active' : ''}" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              Users
            <% end %>
          </li>
        </ul>

        <!-- Divider -->
        <div class="divider"></div>

        <!-- Bottom Links -->
        <ul class="menu gap-1">
          <li>
            <%= link_to root_path, target: "_blank" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              View Site
            <% end %>
          </li>

          <li>
          <%= button_to settings_session_path(Current.session), method: :delete, class: "text-error w-full text-left", data: { turbo: false } do %>
<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <%= t("layout.header.log_out") %>
              <% end %>
          </li>
        </ul>
      </aside>
    </div>
  </div>
</body>
</html>
