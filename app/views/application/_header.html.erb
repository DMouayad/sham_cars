<header class="navbar bg-base-100 shadow-sm sticky top-0 z-50">
  <div class="container-app flex w-full">
    <!-- Logo -->
    <div class="flex-1">
      <%= link_to root_path, class: "btn btn-ghost text-xl gap-2" do %>
        <span class="text-2xl">âš¡</span>
        <span class="font-bold hidden sm:inline">
        <%= t("application.name") %>
        </span>
      <% end %>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-1">
      <%= link_to "Vehicles", vehicles_path, class: "btn btn-ghost btn-sm" %>
      <%= link_to "Brands", brands_path, class: "btn btn-ghost btn-sm" %>

      <%= link_to comparison_path, class: "btn btn-ghost btn-sm gap-2" do %>
        Compare
        <% if comparison_count > 0 %>
          <span class="badge badge-primary badge-sm"><%= comparison_count %></span>
        <% end %>
      <% end %>
      
      <div class="flex-none ml-auto">
      <% if Current.user %>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost">
            <% if Current.user.avatar.attached? %>
              <%= image_tag Current.user.avatar, class: "w-6 h-6 rounded-full object-cover mr-2", onclick: "event.stopPropagation();" %>
            <% end %>
            <%= link_to Current.user.username, my_profile_path, class: "hover:underline", onclick: "event.stopPropagation();" %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1" onclick="event.stopPropagation();">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            </svg>
          </div>
          <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
            <li class="py-2">
              <div class="flex justify-center">
                <%= link_to my_profile_path do %>
                  <% if Current.user.avatar.attached? %>
                    <%= image_tag Current.user.avatar, class: "w-16 h-16 rounded-full object-cover hover:opacity-80 transition-opacity" %>
                  <% else %>
                    <div class="w-16 h-16 rounded-full bg-base-300 flex items-center justify-center text-base-content font-semibold hover:opacity-80 transition-opacity">
                      <%= Current.user.username.first.upcase %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </li>
            <li class="pb-2">
              <div class="flex justify-center text-sm font-semibold">
                <%= link_to "@#{Current.user.username}", my_profile_path, class: "hover:underline" %>
              </div>
            </li>
            <li><hr class="my-2"></li>
            <li><%= link_to t("layout.header.home"), root_path %></li>
              <% if Current.user&.admin? %>
              <li><%= link_to "Admin Panel", admin_root_path %></li>
            <% end %>
            <li><%= link_to t("layout.header.settings"), settings_path %></li>
            <li><hr class="my-2"></li>
            <li>
              <%= button_to t("layout.header.log_out"), settings_session_path(Current.session), method: :delete, class: "text-error w-full text-left", data: { turbo: false } %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="flex gap-2">
          <%= link_to t("layout.header.sign_in"), sign_in_path, class: "btn btn-ghost" %>
          <%= link_to t("layout.header.sign_up"), sign_up_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

      <% I18n.available_locales.each do |locale| %>
  <% next if I18n.locale == locale %>
  <%= link_to t(".lang.#{locale}"), url_for(locale: locale), class: "btn btn-ghost" %>
<% end %>   
    </nav>

    <!-- Mobile Menu -->
    <div class="dropdown dropdown-end md:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
        <li><%= link_to "Vehicles", vehicles_path %></li>
        <li><%= link_to "Brands", brands_path %></li>
        <li>
          <%= link_to comparison_path do %>
            <span>Compare</span>
            <% if comparison_count > 0 %>
              <span class="badge badge-primary badge-sm"><%= comparison_count %></span>
            <% end %>
          <% end %>
        </li>

        <% if signed_in? %>
          <div class="divider my-1"></div>
          <li><%= link_to "Account", edit_my_profile_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "Admin", admin_root_path %></li>
          <% end %>
          <div class="divider my-1"></div>
          <li><%= button_to "Sign Out", settings_session_path(Current.session), method: :delete, class: "text-left w-full" %></li>
        <% else %>
          <div class="divider my-1"></div>
          <li><%= link_to "Sign In", sign_in_path %></li>
          <li><%= link_to "Sign Up", sign_up_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

