<% content_for :title, t("questions.index.title") %>

<section class="section-padding bg-base-100">
  <div class="container-app">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-2xl md:text-3xl font-bold"><%= t("questions.index.title") %></h1>

      <% if signed_in? %>
        <%= link_to t("questions.index.ask_question"), new_question_path, class: "btn btn-primary btn-sm" %>
      <% else %>
        <%= link_to t("questions.index.sign_in_to_ask"), sign_in_path, class: "btn btn-outline btn-sm" %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
      <% @questions.each do |question| %>
        <%= render "components/question_card", question: question %>
      <% end %>
    </div>
  </div>
</section>
