<% vehicle = local_assigns[:vehicle] %>

<%= link_to vehicle_path(vehicle.slug), class: "block group" do %>
  <div class="bg-base-100 h-[370px] flex flex-col justify-between rounded-box overflow-hidden border border-base-300 hover:border-primary/50 transition-all duration-300">
    <!-- Image -->
    <div class="relative aspect-[16/10] bg-base-200 overflow-hidden">
      <img
        src="<%= vehicle.primary_image_url %>"
        alt="<%= vehicle.full_name %>"
        class="w-full h-full object-cover group-hover:scale-[1.03] transition-transform duration-500"
        loading="lazy"
      >
      <% if vehicle.featured? %>
        <span class="absolute top-3 right-3 bg-secondary text-secondary-content text-xs font-medium px-2 py-1 rounded-full">
          Featured
        </span>
      <% end %>
    </div>

    <div class="px-4 pt-4 flex flex-col justify-between">
      <!-- Brand & Name -->
      <div>
        <p class="text-xs text-base-content/40 uppercase tracking-widest">
          <%= vehicle.brand.name %>
        </p>
        <h3 class="font-semibold text-lg group-hover:text-primary transition-colors">
          <%= vehicle.name %>
        </h3>
      </div>

      <!-- Specs as simple text -->
      <div class="flex flex-wrap gap-2 mt-2">
        <% vehicle.specs_summary.first(3).each do |spec| %>
          <span class="inline-flex items-center gap-1 text-xs px-2 py-1 text-base-content/90 ">
            <span><%= spec[:icon] %></span>
            <span><%= spec[:value] %></span>
          </span>
            <% end %>
      </div>
    </div>
    <div class="flex items-center justify-between p-4">
      <div>
        <p class="text-xs text-base-content/40">From</p>
        <p class="font-bold "><%= vehicle.price_display %></p>
      </div>

      <!-- Compare button (stop propagation to prevent link click) -->
      <% if comparison_vehicle_slugs.include?(vehicle.slug) %>
        <%= button_to remove_comparison_path(vehicle.slug),
            method: :delete,
            class: "btn btn-sm btn-success btn-text shadow-none rounded-full",
            title: "Remove from comparison",
            onclick: "event.stopPropagation();" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          Compare
        <% end %>
      <% else %>
        <%= button_to add_comparison_path(vehicle.slug),
            method: :post,
            class: "btn btn-sm btn-ghost rounded-full",
            title: "Add to comparison",
            onclick: "event.stopPropagation();" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
          </svg>
          Compare
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
