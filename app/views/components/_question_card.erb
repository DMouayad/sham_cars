<div class="card bg-base-100 shadow-sm border border-base-300">
  <div class="card-body p-4">
    <div class="flex items-start justify-between gap-3">
      <h3 class="font-bold leading-snug line-clamp-2">
        <%= link_to question.title, question_path(question), class: "link link-hover" %>
      </h3>

      <div class="badge badge-ghost whitespace-nowrap">
        <%= t("questions.meta.answers", count: question.answers_count) %>
      </div>
    </div>

    <p class="text-sm text-base-content/70 line-clamp-2 mt-2">
      <%= question.body %>
    </p>

    <div class="mt-3 text-xs text-base-content/60 flex items-center justify-between">
      <span>
        <%= t("questions.meta.by") %> <%= question.user.username.presence || question.user.email %>
      </span>
      <span>
        <%= l(question.created_at.to_date) %>
      </span>
    </div>
  </div>
</div>
