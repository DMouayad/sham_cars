<% vehicle = local_assigns[:vehicle] %>

<div class="bg-base-100 rounded-xl overflow-hidden shadow-sm hover:shadow-md border border-base-200 transition-all duration-200 group">
  <!-- Image -->
  <div class="relative aspect-[16/9] bg-base-200 overflow-hidden">
    <img
      src="<%= vehicle.primary_image_url %>"
      alt="<%= vehicle.full_name %>"
      class="w-full h-full object-cover group-hover:scale-[1.03] transition-transform duration-300"
      loading="lazy"
    >
    <% if vehicle.featured? %>
      <span class="absolute top-2 left-2 badge badge-secondary badge-sm">Featured</span>
    <% end %>
  </div>

  <!-- Content -->
  <div class="p-3">
    <div class="flex items-start justify-between gap-2">
      <div class="min-w-0">
        <p class="text-[10px] text-base-content/50 uppercase tracking-wider">
          <%= vehicle.brand.name %>
        </p>
        <h3 class="font-medium text-sm truncate" title="<%= vehicle.name %>">
          <%= vehicle.name %>
        </h3>
      </div>
      <p class="font-bold text-primary text-sm whitespace-nowrap">
        <%= vehicle.price_display %>
      </p>
    </div>

    <div class="flex gap-2 mt-2 text-[11px] text-base-content/80">
      <% vehicle.specs_summary.first(4).each do |spec| %>
        <span><%= spec[:icon] %> <%= spec[:value] %></span>
      <% end %>
    </div>
  </div>

  <!-- Footer Actions -->
  <div class="flex border-t border-base-200 divide-x divide-base-200">
    <% if comparison_vehicle_slugs.include?(vehicle.slug) %>
      <%= button_to remove_comparison_path(vehicle.slug), method: :delete,
          class: "flex-1 flex items-center justify-center gap-1.5 px-4 py-2.5 text-xs font-medium text-success hover:bg-success/10 transition-colors",
          title: "Remove from comparison" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <span>Added</span>
      <% end %>
    <% else %>
        <div class="flex items-center justify-center gap-1.5 px-4 py-2.5 text-xs font-medium text-base-content/70 hover:bg-base-200 hover:text-base-content transition-colors">
         <span>Compare</span>
      <%= button_to add_comparison_path(vehicle.slug),
          method: :post,
          title: "Add to comparison" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>

      <% end %>
        </div>
    <% end %>

    <%= link_to vehicle_path(vehicle.slug),
        class: "flex-1 flex items-center justify-center gap-1.5 py-2.5 text-xs font-medium text-primary hover:bg-primary/10 transition-colors" do %>
      <span>View</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    <% end %>
  </div>
</div>
