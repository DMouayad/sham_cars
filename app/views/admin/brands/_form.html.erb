<%# app/views/admin/brands/_form.html.erb %>

<%= form_with model: [:admin, brand], class: "space-y-6 max-w-2xl" do |f| %>
  <% if brand.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">Please fix the following errors:</h3>
        <ul class="list-disc list-inside text-sm">
          <% brand.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card bg-base-100 shadow">
    <div class="card-body">
      <h2 class="card-title mb-4">Brand Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="form-control">
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, class: "input input-bordered w-full", required: true, placeholder: "Tesla" %>
        </div>

        <div class="form-control">
          <%= f.label :country, class: "label" %>
          <%= f.text_field :country, class: "input input-bordered w-full", placeholder: "USA" %>
        </div>

        <div class="form-control md:col-span-2">
          <%= f.label :website, class: "label" %>
          <%= f.url_field :website, class: "input input-bordered w-full", placeholder: "https://example.com" %>
        </div>

        <div class="form-control md:col-span-2">
          <%= f.label :logo, "Logo URL", class: "label" %>
          <%= f.url_field :logo, class: "input input-bordered w-full", placeholder: "https://example.com/logo.png" %>
        </div>

        <div class="form-control md:col-span-2">
          <%= f.label :description, class: "label" %>
          <%= f.text_area :description, class: "textarea textarea-bordered w-full h-24", placeholder: "Brand description..." %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-end gap-4">
    <%= link_to "Cancel", admin_brands_path, class: "btn btn-ghost" %>
    <%= f.submit brand.persisted? ? "Update Brand" : "Create Brand", class: "btn btn-primary" %>
  </div>
<% end %>
