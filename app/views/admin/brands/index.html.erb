<%# app/views/admin/brands/index.html.erb %>

<% content_for :title, "Brands" %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">Brands</h1>
  <%= link_to new_admin_brand_path, class: "btn btn-primary gap-2" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    Add Brand
  <% end %>
</div>

<div class="card bg-base-100 shadow">
  <div class="overflow-x-auto">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Country</th>
          <th>Vehicles</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td>
              <div class="flex items-center gap-3">
                <% if brand.logo.present? %>
                  <img src="<%= brand.logo %>" alt="<%= brand.name %>" class="h-8 w-auto">
                <% else %>
                  <span class="text-2xl">üè≠</span>
                <% end %>
                <div>
                  <div class="font-medium"><%= brand.name %></div>
                  <div class="text-sm text-base-content/60"><%= brand.slug %></div>
                </div>
              </div>
            </td>
            <td><%= brand.country || "‚Äî" %></td>
            <td>
              <span class="badge badge-ghost"><%= brand.vehicles.count %></span>
            </td>
            <td>
              <div class="flex gap-1">
                <%= link_to admin_brand_path(brand), class: "btn btn-ghost btn-xs" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                <% end %>

                <%= link_to edit_admin_brand_path(brand), class: "btn btn-ghost btn-xs" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>

                <% if brand.vehicles.empty? %>
                  <%= button_to admin_brand_path(brand),
                      method: :delete,
                      class: "btn btn-ghost btn-xs text-error",
                      data: { turbo_confirm: "Delete #{brand.name}?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @brands.empty? %>
    <div class="p-8 text-center text-base-content/60">
      No brands found
    </div>
  <% end %>
</div>
