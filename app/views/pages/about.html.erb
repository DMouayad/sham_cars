<% content_for :title, t("about.title") %>

<div class="section-padding">
  <div class="container-app max-w-3xl">
    <%= render "components/page_header",
        title: t("about.title"),
        subtitle: t("about.subtitle") %>

    <div class="prose prose-lg max-w-none">
      <p>
        <%= t("about.description") %>
      </p>

      <h2><%= t("about.what_we_offer") %></h2>
      <ul>
        <% t("about.offerings").each do |offering| %>
          <li><%= offering.html_safe %></li>
        <% end %>
      </ul>

      <h2><%= t("about.contact") %></h2>
      <p>
        <%= t("about.contact_description") %>
      </p>
    </div>
  </div>
</div>
