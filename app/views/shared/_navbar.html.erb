<%# app/views/shared/_navbar.html.erb %>

<header class="navbar bg-base-100 shadow-sm sticky top-0 z-50">
  <div class="container-app flex w-full">
    <!-- Logo -->
    <div class="flex-1">
      <%= link_to root_path, class: "btn btn-ghost text-xl gap-2" do %>
        <span class="text-2xl">âš¡</span>
        <span class="font-bold hidden sm:inline">ArenaEV</span>
      <% end %>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-1">
      <%= link_to "Vehicles", vehicles_path, class: "btn btn-ghost btn-sm" %>
      <%= link_to "Brands", brands_path, class: "btn btn-ghost btn-sm" %>

      <%= link_to comparison_path, class: "btn btn-ghost btn-sm gap-2" do %>
        Compare
        <% if comparison_count > 0 %>
          <span class="badge badge-primary badge-sm"><%= comparison_count %></span>
        <% end %>
      <% end %>

      <% if signed_in? %>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-sm gap-2">
            <div class="avatar placeholder">
              <div class="w-6 rounded-full bg-primary text-primary-content text-xs">
                <span><%= current_user.display_name.first.upcase %></span>
              </div>
            </div>
            <span class="hidden lg:inline"><%= current_user.display_name %></span>
          </div>
          <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
            <li><%= link_to "Account Settings", edit_my_profile_path %></li>
            <% if current_user.admin_access? %>
              <div class="divider my-1"></div>
              <li><%= link_to "Admin Panel", admin_root_path %></li>
            <% end %>
            <div class="divider my-1"></div>
            <li><%= button_to "Sign Out", settings_session_path(Current.session), method: :delete, class: "text-left" %></li>
          </ul>
        </div>
      <% else %>
        <%= link_to "Sign In", sign_in_path, class: "btn btn-ghost btn-sm" %>
        <%= link_to "Sign Up", sign_up_path, class: "btn btn-primary btn-sm" %>
      <% end %>
    </nav>

    <!-- Mobile Menu -->
    <div class="dropdown dropdown-end md:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
        <li><%= link_to "Vehicles", vehicles_path %></li>
        <li><%= link_to "Brands", brands_path %></li>
        <li>
          <%= link_to comparison_path do %>
            <span>Compare</span>
            <% if comparison_count > 0 %>
              <span class="badge badge-primary badge-sm"><%= comparison_count %></span>
            <% end %>
          <% end %>
        </li>

        <% if signed_in? %>
          <div class="divider my-1"></div>
          <li><%= link_to "Account", edit_my_profile_path %></li>
          <% if current_user.admin_access? %>
            <li><%= link_to "Admin", admin_root_path %></li>
          <% end %>
          <div class="divider my-1"></div>
          <li><%= button_to "Sign Out", settings_session_path(Current.session), method: :delete, class: "text-left w-full" %></li>
        <% else %>
          <div class="divider my-1"></div>
          <li><%= link_to "Sign In", sign_in_path %></li>
          <li><%= link_to "Sign Up", sign_up_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
