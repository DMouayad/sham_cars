<div class="card bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="flex items-start gap-4">
      <div class="avatar">
        <div class="w-12 h-12 rounded-full bg-base-200">
          <%# In a real app, you'd have user avatars %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
        </div>
      </div>
      <div>
        <div class="flex items-center gap-2">
          <h4 class="font-semibold"><%= review.user.username %></h4>
          <span class="text-xs text-base-content/60"><%= time_ago_in_words(review.created_at) %></span>
        </div>
        <div class="rating rating-sm mt-1">
          <% review.rating.times do %>
            <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" disabled>
          <% end %>
          <% (5 - review.rating).times do %>
            <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" disabled>
          <% end %>
        </div>
      </div>
    </div>
    <h3 class="text-lg font-semibold mt-4"><%= review.title %></h3>
    <p class="text-base-content/80"><%= review.body %></p>
  </div>
</div>
