<div id="new-review" class="mt-12">
  <div class="flex items-center gap-3 mb-6">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
    </svg>
    <h2 class="text-2xl font-bold"><%= t("reviews.form.write_review") %></h2>
  </div>

  <% if Current.user %>
    <% if Current.user.reviews.exists?(vehicle: @vehicle) %>
      <div class="card bg-success/10 border border-success/20">
        <div class="card-body items-center py-8">
          <div class="text-success mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <p class="font-medium text-success"><%= t("reviews.form.review_submitted") %></p>
          <p class="text-center text-base-content/70 text-sm">
            <%= t("reviews.form.already_reviewed_message") %>
          </p>
        </div>
      </div>
    <% else %>
      <%= form_with(model: [@vehicle, Review.new], url: vehicle_reviews_path(@vehicle.slug), class: "card bg-base-100 shadow-xl border border-base-200") do |form| %>
        <div class="card-body gap-5">
          <!-- Rating -->
          <div class="form-control">
            <label class="label pb-1">
              <span class="label-text font-medium"><%= t("reviews.form.your_rating") %></span>
              <span class="label-text-alt text-error"><%= t("reviews.form.required") %></span>
            </label>
            <div class="flex items-center gap-4">
              <div class="rating rating-lg">
                <input type="radio" name="review[rating]" class="rating-hidden" checked>
                <% 5.times do |i| %>
                  <%= form.radio_button :rating, i + 1, class: "mask mask-star-2 bg-warning" %>
                <% end %>
              </div>
              <span class="text-sm text-base-content/60" data-rating-text><%= t("reviews.form.select_a_rating") %></span>
            </div>
          </div>

          <div class="divider my-0"></div>

          <!-- Title -->
          <div class="form-control">
            <label class="label pb-1">
              <span class="label-text font-medium"><%= t("reviews.form.review_title") %></span>
              <span class="label-text-alt text-base-content/50"><%= t("reviews.form.optional") %></span>
            </label>
            <%= form.text_field :title,
                class: "input input-bordered w-full focus:input-primary transition-colors",
                placeholder: t("reviews.form.title_placeholder") %>
          </div>

          <!-- Body -->
          <div class="form-control">
            <label class="label pb-1">
              <span class="label-text font-medium"><%= t("reviews.form.your_review") %></span>
              <span class="label-text-alt text-error"><%= t("reviews.form.required") %></span>
            </label>
            <%= form.text_area :body,
                rows: 5,
                class: "textarea textarea-bordered w-full focus:textarea-primary transition-colors leading-relaxed",
                placeholder: t("reviews.form.body_placeholder"),
                maxlength: 2000,
                minlength: 10,
                required: true %>
            <label class="label pt-1">
              <span class="label-text-alt text-base-content/50">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <%= t("reviews.form.feedback_info") %>
              </span>
            </label>
          </div>

          <!-- Submit -->
          <div class="form-control mt-2">
            <%= form.submit t("reviews.form.submit_review"), class: "btn btn-primary btn-block gap-2" %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="card bg-base-200/50 border border-base-300">
      <div class="card-body items-center py-10">
        <div class="bg-base-300 rounded-full p-4 mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <p class="font-medium text-lg"><%= t("reviews.form.share_your_experience") %></p>
        <p class="text-base-content/60 text-center text-sm mb-4">
          <%= t("reviews.form.sign_in_to_review") %>
        </p>
        <%= link_to sign_in_path, class: "btn btn-primary gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
          </svg>
          <%= t("reviews.form.sign_in") %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
